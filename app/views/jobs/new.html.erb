<h1 style = 'text-align: center;'>Create a New Job</h1>

<div class  = 'container createjob'>
  <%= form_for :job, url: jobs_path do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description, :minlength => 50%>
  </p>

  <p>
    <%= f.label :origin %><br>
    <%= f.text_area :origin %>
  </p>

  <p>
    <%= f.label :destination %><br>
    <%= f.text_area :destination %>
  </p>

  <p>
    <%= f.label :cost %><br>
    <%= f.text_area :cost %>
  </p>

  <p>
    <%= f.label :containers_needed %><br>
    <%= f.text_area :containers_needed %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
</div>
