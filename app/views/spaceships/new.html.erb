<div class 'container'>
  <h1 id = 'newspaceship'>New Spaceship</h1>
  <%= form_for Spaceship.new, remote: true do |f| %>
    <p class = 'newspaceshipform'>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p class = 'newspaceshipform'>
      <%= f.label :capacity %><br>
      <%= f.text_field :capacity %>
    </p>

      <p class = 'newspaceshipform'>
      <%= f.label :location %><br>
      <%= f.text_field :location %>
    </p>
      <p class = 'newspaceshipform'>
        <%= f.label :image%>
  			<%= f.file_field (:avatar), :id=>'newspaceshipimage'%>
      </p>
      <br>
    <p class = 'newspaceshipform'>
      <%= f.submit %>
    </p>
  <% end %>
</div>
