<h1><%= @Spaceships.name %></h1>

<img src="<%= @Spaceships.avatar%>">


<h3>Jobs under this ship</h3>

<% if user_signed_in? %>
  <% @Sships.where({user_id: current_user.id}).each do |s| %>
    <%@SpaceshipJobs.where({spaceship_id: s.id}).each do |j| %>
    <p><%=@Jobs.find(j.job_id).description%></p>
    <%end%>
  <%end%>
<%end%>
